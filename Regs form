    <script>
        const form = document.getElementById('registrationForm');

        // Validation functions
        function validateName(value) {
            return /^[A-Za-z\s]+$/.test(value) && value.trim().length > 0;
        }

        function validateUsername(value) {
            return /^[A-Za-z0-9_]{4,20}$/.test(value);
        }

        function validatePhone(value) {
            return /^[0-9]{10,15}$/.test(value.replace(/[\s\-\(\)]/g, ''));
        }

        function validateEmail(value) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
        }

        function validateDate(value) {
            const regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
            if (!regex.test(value)) return false;
            
            const [, day, month, year] = value.match(regex);
            const date = new Date(year, month - 1, day);
            
            return date.getFullYear() == year && 
                   date.getMonth() == month - 1 && 
                   date.getDate() == day;
        }

        function validatePassword(value) {
            return value.length >= 8;
        }

        // Real-time validation
        function setupFieldValidation(fieldId, validationFn, errorId) {
            const field = document.getElementById(fieldId);
            const error = document.getElementById(errorId);

            field.addEventListener('blur', () => {
                if (field.value.trim() === '') {
                    field.classList.remove('invalid');
                    error.classList.remove('show');
                } else if (!validationFn(field.value)) {
                    field.classList.add('invalid');
                    error.classList.add('show');
                } else {
                    field.classList.remove('invalid');
                    error.classList.remove('show');
                }
            });

            field.addEventListener('input', () => {
                if (field.classList.contains('invalid') && validationFn(field.value)) {
                    field.classList.remove('invalid');
                    error.classList.remove('show');
                }
            });
        }

        // Setup validations
        setupFieldValidation('firstName', validateName, 'firstNameError');
        setupFieldValidation('lastName', validateName, 'lastNameError');
        setupFieldValidation('username', validateUsername, 'usernameError');
        setupFieldValidation('phone', validatePhone, 'phoneError');
        setupFieldValidation('email', validateEmail, 'emailError');
        setupFieldValidation('dob', validateDate, 'dobError');
        setupFieldValidation('password', validatePassword, 'passwordError');

        // Confirm password validation
        const password = document.getElementById('password');
        const confirmPassword = document.getElementById('confirmPassword');
        const confirmPasswordError = document.getElementById('confirmPasswordError');

        confirmPassword.addEventListener('blur', () => {
            if (confirmPassword.value !== '' && confirmPassword.value !== password.value) {
                confirmPassword.classList.add('invalid');
                confirmPasswordError.classList.add('show');
            }
        });

        confirmPassword.addEventListener('input', () => {
            if (confirmPassword.value === password.value) {
                confirmPassword.classList.remove('invalid');
                confirmPasswordError.classList.remove('show');
            }
        });

        // Form submission
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            let isValid = true;

            // Validate all required fields
            const firstName = document.getElementById('firstName');
            if (!validateName(firstName.value)) {
                firstName.classList.add('invalid');
                document.getElementById('firstNameError').classList.add('show');
                isValid = false;
            }

            const lastName = document.getElementById('lastName');
            if (!validateName(lastName.value)) {
                lastName.classList.add('invalid');
                document.getElementById('lastNameError').classList.add('show');
                isValid = false;
            }

            const username = document.getElementById('username');
            if (!validateUsername(username.value)) {
                username.classList.add('invalid');
                document.getElementById('usernameError').classList.add('show');
                isValid = false;
            }

            const phone = document.getElementById('phone');
            if (!validatePhone(phone.value)) {
                phone.classList.add('invalid');
                document.getElementById('phoneError').classList.add('show');
                isValid = false;
            }

            const email = document.getElementById('email');
            if (!validateEmail(email.value)) {
                email.classList.add('invalid');
                document.getElementById('emailError').classList.add('show');
                isValid = false;
            }

            const gender = document.getElementById('gender');
            if (gender.value === '') {
                gender.classList.add('invalid');
                document.getElementById('genderError').classList.add('show');
                isValid = false;
            }

            const dob = document.getElementById('dob');
            if (!validateDate(dob.value)) {
                dob.classList.add('invalid');
                document.getElementById('dobError').classList.add('show');
                isValid = false;
            }

            const country = document.getElementById('country');
            if (country.value === '') {
                country.classList.add('invalid');
                document.getElementById('countryError').classList.add('show');
                isValid = false;
            }

            const pwd = document.getElementById('password');
            if (!validatePassword(pwd.value)) {
                pwd.classList.add('invalid');
                document.getElementById('passwordError').classList.add('show');
                isValid = false;
            }

            const confPwd = document.getElementById('confirmPassword');
            if (confPwd.value !== pwd.value) {
                confPwd.classList.add('invalid');
                document.getElementById('confirmPasswordError').classList.add('show');
                isValid = false;
            }

            const terms = document.getElementById('terms');
            if (!terms.checked) {
                document.getElementById('termsError').classList.add('show');
                isValid = false;
            } else {
                document.getElementById('termsError').classList.remove('show');
            }

            if (isValid) {
                document.getElementById('successMessage').classList.add('show');
                form.reset();
                setTimeout(() => {
                    document.getElementById('successMessage').classList.remove('show');
                }, 5000);
            }
        });
    </script>
</body>
</html>
